/* pages/project3/project3.wxss */
page{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}
.inp{
width: 100%;
display: flex;
align-items: center;
height: 100rpx;
padding: 0 15rpx 0 0;
  box-sizing: border-box;
  border-bottom:1rpx solid #eee;
}

.icon1{
  margin:25rpx;
}
.icon2{
  margin:0 15rpx;
}
.icon1,.icon2{
  width: 30rpx;
  height: 30rpx;
}
.search{
  display: flex;
  flex:1;
  height: 60rpx;
  font-size:30rpx;
  align-items: center;
  background: #E9ECF0;
  padding: 0 15rpx;
  box-sizing: border-box;
  border-radius: 10rpx;
}
.wrap{
  width: 100%;
  flex:1;
  display: flex;
}
.left{
width: 200rpx;
height: 100%;
border-right:1rpx solid #eee;
}
.right{
height: 100%;
flex: 1;
/* background: #ccf; */
display: flex;
flex-wrap: wrap;
justify-content: space-around;
text-align: center;
}
.list-nav{
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  border-bottom: 1rpx solid #eee;
  font-size: 33rpx;
  color: #6C6D6E;
}


.footer{
  width: 100%;
  height:100rpx;
  background: #F7F9FA;
  display: flex;
  justify-content: space-around;
  align-items: center;
  text-align: center;
  position:fixed;
  bottom: 0;
  left:0;
  color: #555;
}
.img{
  width: 50rpx;
  height: 45rpx;
}
.foot-dd{
  font-size: 30rpx;
}
.select{
  color: green;
}
.normal{
  color: #ccf;
}


.ri{
width: 28%;
font-size:30rpx;
margin: 10rpx;
margin-top:38rpx;
}
.im{
  width: 80rpx;
  height: 80rpx;
}